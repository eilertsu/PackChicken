# --- PackChicken base config ---
LOG_LEVEL=INFO #choose between LOG_LEVEL=DEBUG and LOG_LEVEL=INFO
#DRY_RUN=true   #uncomment to parse email without sending orders
POLL_INTERVAL_SEC=0

# --- Shopify ---
SHOPIFY_DOMAIN=${SHOPIFY_DOMAIN}
SHOPIFY_ACCESS_TOKEN=${SHOPIFY_ACCESS_TOKEN}

# --- Bring ---
BRING_API_KEY=${BRING_API_KEY}
BRING_API_UID=${BRING_API_UID}
BRING_CUSTOMER_NUMBER=5
BRING_TEST_INDICATOR=true
BRING_PRODUCT=SERVICEPAKKE



# --- Email ingest ---
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993
EMAIL_USER=${EMAIL_USER}
EMAIL_PASSWORD=${EMAIL_PASSWORD}
EMAIL_FOLDER=INBOX
EMAIL_SENDER_ALLOWLIST=t.shopifyemail.com
EMAIL_SUBJECT_REGEX="(?i)(Bestilling\s*#|Order\s*#|Ordre\s*#)"
PACKCHICKEN_WEBHOOK=http://localhost:8000/inbox/email-order
PACKCHICKEN_TOKEN=${PACKCHICKEN_TOKEN}
